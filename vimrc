" This must be first, because it changes other options as side effect
set nocompatible
syntax on
colorscheme monokai
call pathogen#helptags()
call pathogen#infect()
set number
set nowrap
set tabstop=4
set autoindent
set copyindent
set showmatch
set ignorecase
set smartcase
set smarttab
set hlsearch
set incsearch
set history=1000
set undolevels=1000
set wildignore=*.swp,*.bak,*.pyc,*.class
set title
set nobackup
set noswapfile
set list
set listchars=tab:>-,trail:.,extends:#,nbsp:.
set pastetoggle=<F2>

